<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zfh.mapper.FollowMapper">

    <select id="selectFanIdsByUserId" resultType="java.lang.Long">
        select fan_id from follow where user_id = #{userId}
    </select>

    <select id="selectAllFollowIdById" resultType="java.lang.Long">
        select user_id from follow where fan_id = #{id}
    </select>

    <select id="selectFollowIdsByUserId" resultType="java.lang.Long">
        select user_id from follow where fan_id = #{id}
    </select>
</mapper>
